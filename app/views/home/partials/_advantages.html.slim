    =render 'home/partials/components/feature'

    -@desc_icon = 'fa fa-barcode'
    -@caption = 'Boleto Bancário'
    -@description = 'Para creditrar o pré-pago basta selecionar qual cartão, o valor e pagar o boleto. Podendo inclusive creditar no cartão de terceiros!'
