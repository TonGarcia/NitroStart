    =render 'home/partials/components/feature'

    -@desc_icon = 'fa fa-credit-card'
    -@out_icon = 'ion-settings'
    -@caption = 'Cartão Salário'
    -@description = 'Seu funcionário não tem conta no banco? A pessoa está negativada? Pague o salário dele com Predoo e nós devolvemos o valor acumulado contribuindo no 13º dele.'
    =render 'home/partials/components/feature'

    -@desc_icon = 'fa fa-credit-card'
    -@out_icon = 'mdi-action-shopping-cart'
