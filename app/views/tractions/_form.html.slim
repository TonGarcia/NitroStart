= form_for [@pitch, @traction] do |f|
  - current_obj = @traction
  - if current_obj.errors.any?
    .alert.alert-border-left
      strong = "Atenção. #{pluralize(current_obj.errors.count, "erro")} impediu a Tração de ser registrada:"
      ul.style_warning_list
        - current_obj.errors.full_messages.each do |message|
          li = message


  .row
    .input-field.col.l12.s12
      i class="prefix #{t_current_class_icons[:grow_strategy]}"
      = f.text_field :grow_strategy
      = f.label :grow_strategy
      .footer-info.purple-text =render 'tractions/partials/academy_strategy'

    .input-field.col.l12.s12
      - current_attr = :lead_cust
      i class="prefix #{t_current_class_icons[current_attr]}"
      = f.text_field current_attr, class: 'currency', value: number_with_precision(@traction[current_attr], precision: 2)
      = f.label current_attr
      .footer-info.purple-text =render 'tractions/partials/academy_lead'


    .input-field.col.l12.s12
      -current_attr = :conversion_cust
      i class="prefix #{t_current_class_icons[current_attr]}"
      = f.text_field current_attr, class: 'currency', value: number_with_precision(@traction[current_attr], precision: 2)
      = f.label current_attr
      .footer-info.purple-text =render 'tractions/partials/academy_conversion'


    .input-field.col.l12.s12
      i class="prefix #{t_current_class_icons[:amount_daily_lead]}"
      = f.text_field :amount_daily_lead, class: 'formatted_int'
      = f.label :amount_daily_lead
      .footer-info.purple-text =render 'tractions/partials/academy_daily_lead'


    .input-field.col.l12.s12
      i class="prefix #{t_current_class_icons[:daily_growth_rate]}"
      = f.text_field :daily_growth_rate, class: 'formatted_int'
      = f.label :daily_growth_rate
      .footer-info.purple-text =render 'tractions/partials/academy_daily_conversion'


    .input-field.col.l12.s12
      i class="prefix #{t_current_class_icons[:customer_channels]}"
      = f.text_field :customer_channels
      = f.label :customer_channels
      .footer-info.purple-text Como se comunica com Clientes? Vá além do óbvio: Mídias Sociais.


  - @footer_link=true
  = render 'layouts/partials/components/static/float_buttons/save'